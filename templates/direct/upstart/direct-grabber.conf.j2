#!upstart

description "Direct E-mail to HTTP Grabber"
author      "Josh Mandel"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

env PROGRESS_DIR=/opt/direct-grabber/progress
env SOURCE_DIR={{incoming_mail_dir}}
env HTTP_HOST={{ccda_receiver_url}}/internal/addPatient/

script

    chdir /opt/direct-grabber/bin
    exec node launch.js

end script
